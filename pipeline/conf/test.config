/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run main.nf -profile test --fasta /path/to/fasta --outDir /OUTPUT/PATH --condaCacheDir /PATH/TO/CONDA/ENV/FOLDER
 */

params {

  config_profile_name = 'EUCANCAN/benchmark test data'
  configProfileDescription = 'Minimal test dataset to check pipeline functions'

  // Limit resources so that this can run
  maxCpus = 4
  maxMemory = 8.GB
  maxTime = 48.h

  snvIndel = "$projectDir/test/data/microMutect.vcf.gz"
  sv = "$projectDir/test/data/microManta.vcf.gz"
  truth = "$projectDir/test/data/micro.truth.snv_indel.vcf.gz"
  truthSv = "$projectDir/test/data/mini.truth.sv.vcf.gz"
  snvIndelSname = 'DO32237T'
  svSname = 'DO32237T'
  truthSnvSname = 'PILOT50_SNV'
  targetBed = "$projectDir/test/data/miniTargets.bed"
  outName = 'test'
  outDir = '/data/tmp/tgutman/test_wrapper'
}
